#!/bin/bash -e

# Enable jemalloc for reduced memory usage and latency.
if [ -z "${LD_PRELOAD+x}" ]; then
    LD_PRELOAD=$(find /usr/lib -name libjemalloc.so.2 -print -quit)
    export LD_PRELOAD
fi

# Auto-install gems if Gemfile has changed (development mode)
if [ "$RAILS_ENV" = "development" ]; then
    echo "Checking for new gems..."
    bundle check || bundle install
fi

# Always prepare database (create if not exists, run migrations)
echo "Preparing database..."
./bin/rails db:prepare 2>/dev/null || true

# Remove stale PID file if exists
if [ -f "tmp/pids/server.pid" ]; then
    echo "Removing stale PID file..."
    rm -f tmp/pids/server.pid
fi

# If running the rails server then precompile assets
if [ "${@: -2:1}" == "./bin/rails" ] && [ "${@: -1:1}" == "server" ]; then
  # Build JavaScript assets if they don't exist
  if [ ! -f "app/assets/builds/application.js" ]; then
    echo "Building JavaScript assets..."
    yarn build
  fi

  # Build Tailwind CSS if it doesn't exist
  if [ ! -f "app/assets/builds/tailwind.css" ]; then
    echo "Building Tailwind CSS..."
    ./bin/rails tailwindcss:build
  fi

  # Precompile assets if they don't exist
  if [ ! -f "app/assets/builds/application.js" ] || [ ! -f "app/assets/builds/tailwind.css" ]; then
    echo "Precompiling assets..."
    ./bin/rails assets:precompile
  fi
fi

exec "${@}"
