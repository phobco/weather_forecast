<% content_for :title, "Погода" %>

<div class="min-h-screen bg-gradient-to-br from-blue-100 to-indigo-200 p-8">
  <div class="max-w-6xl mx-auto">
    <h1 class="text-3xl font-bold text-center text-gray-800 mb-8">
      Прогноз погоды на <%= Date.current.strftime('%d.%m.%Y') %>
    </h1>

    <div class="space-y-10">
      <% @weather_data.each do |city, data| %>
        <div class="bg-gradient-to-br from-white to-blue-50 rounded-lg shadow-lg p-6 border border-blue-200">
          <h2 class="text-xl font-semibold text-gray-800 mb-4 text-center">
            <%= I18n.t("cities.#{city}") %>
          </h2>

          <%= render partial: 'forecast', locals: { weather_data: data } %>
        </div>
      <% end %>
    </div>

    <footer class="text-center mt-8 pt-6 border-t border-gray-200">
      <p class="text-sm text-gray-500">
        Данные обновляются каждый час
      </p>
    </footer>
  </div>
</div>
