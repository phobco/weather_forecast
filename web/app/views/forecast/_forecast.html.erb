<% if weather_data.present? && weather_data['hourly_forecast'].present? %>
  <div class="flex flex-nowrap overflow-x-auto gap-4 pb-3">
    <% weather_data['hourly_forecast'].each do |hour_data| %>
      <div class="flex-shrink-0 text-center bg-gradient-to-br from-blue-50 to-indigo-100 rounded-xl p-4 w-24 border border-blue-200 shadow-sm hover:shadow-md transition-shadow duration-200">
        <div class="text-sm text-blue-700 font-semibold mb-2">
          <%= hour_data['display_time'] || "#{hour_data['hour']}:00" %>
        </div>
        <div class="text-2xl font-bold text-gray-900">
          <%= hour_data['temperature']&.round(1) || '—' %>°
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="text-center text-gray-500 py-8">
    <%= I18n.t('errors.forecast.no_data') %>
  </div>
<% end %>
