<% if weather_data.present? && weather_data['hourly_forecast'].present? %>
  <div class="bg-white rounded-lg shadow-sm border border-gray-100 p-6 inline-block">
    <div class="flex gap-8">
      <% weather_data['hourly_forecast'].each do |hour_data| %>
        <div class="text-center min-w-16">
          <div class="text-xs text-gray-500 mb-2">
            <%= hour_data['display_time'] || "#{hour_data['hour']}:00" %>
          </div>
          <div class="text-lg font-light text-gray-900">
            <%= hour_data['temperature']&.round(1) || '—' %><span class="text-sm text-gray-400">°</span>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="bg-white rounded-lg shadow-sm border border-gray-100 p-6 inline-block">
    <p class="text-gray-400 text-sm"><%= I18n.t('errors.forecast.no_data') %></p>
  </div>
<% end %>
